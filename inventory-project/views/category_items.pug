extends layout

block content
  a(href="/categories")
    p Go Back

  div.d-flex.align-items-center
    h3= category.name
    a(href=category.url + '/delete')
      p(style="margin: 0; margin-left: 1rem; color: red") Delete this Category

  div.d-flex.container-fluid
    each item in items
      div.item-listing
        h4= item.brand.name
        h5= item.name
        em= item.description
        div.d-flex.justify-content-between
          p Stock: #{item.stock}pcs
          strong $#{item.price}.99