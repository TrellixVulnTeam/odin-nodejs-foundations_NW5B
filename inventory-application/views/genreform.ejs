<%- include header %>
<%- include navbar %>
<div class="container-fluid" id="genre-form-container">
  <div class="px-0 container-fluid" style="display: flex;"><a href="/"><h5>Home</h5></a></div>
  <h4 style="text-align: center;">Create a new Genre!</h4>
  <form id="genre-form" action="/genres" method="POST">
    <div class="form-group">
      <label class="d-block" for="name">Genre Name</label>
      <input class="form-control" name="name" type="text" required minlength="3" />
    </div>
    <div class="form-group">
      <button class="btn btn-primary d-block" style="margin: 0 auto;">CREATE</button>
    </div>
  </form>
</div>
<%- include footer %>